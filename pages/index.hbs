<div id="segment-code">
	<div class="codes">
		<div class="code-left">
<pre><code class="lang-javascript">// Server
var DeepstreamServer = require( 'deepstream.io' ),
    server = new DeepstreamServer();

server.set( 'host', 'localhost' );
server.set( 'port', 6020 );

server.start();</code></pre>
		</div>
		<div class="code-seperator">
		</div>
		<div class="code-right">
<pre><code class="lang-javascript">// Browser / Node Client
ds = deepstream( 'localhost:6020' ).login();

john = ds.record.getRecord( 'user/johnsmith' );
john.get( 'lastname' ); // Smith
john.subscribe( 'geo',( geoCoords ) => {} );
john.set( 'geo.latitude', 52.5200 );</code></pre>
		</div>
	</div>
</div>

